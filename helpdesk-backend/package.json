{
  "name": "helpdesk-backend",
  "version": "1.0.0",
  "description": "Smart Helpdesk Backend with Agentic Triage System",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --testTimeout=10000 --detectOpenHandles",
    "test:watch": "jest --watch --testTimeout=10000",
    "test:coverage": "jest --coverage --testTimeout=10000",
    "seed": "node scripts/seed.js",
    "setup": "node scripts/setup-dirs.js",
    "build": "echo 'No build step required for Node.js'",
    "lint": "echo 'Add ESLint configuration if needed'",
    "clean": "rm -rf node_modules package-lock.json && npm install"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^6.11.2",
    "express-validator": "^7.2.1",
    "helmet": "^7.2.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongodb-memory-server": "^8.16.1",
    "mongoose": "^7.8.7",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/__tests__/**/*.js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!jest.config.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "helpdesk",
    "ai",
    "express",
    "mongodb",
    "triage",
    "support-system",
    "rest-api",
    "jwt-authentication",
    "agent-workflow"
  ],
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/helpdesk-backend.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/helpdesk-backend/issues"
  },
  "homepage": "https://github.com/yourusername/helpdesk-backend#readme"
}
